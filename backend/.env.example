# Environment variables for backend
APP_NAME="360-Degree Feedback Backend"
ENV=production
LOG_LEVEL=INFO

# Database configuration
DB_PROVIDER=postgres
DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/newsdb

# MongoDB (if using)
# DB_PROVIDER=mongodb
# MONGODB_URI=mongodb://localhost:27017
# MONGODB_DB=newsdb

# NLP Configuration
NLP_ENABLED=true
USE_GPU=false
MODEL_CACHE_DIR=
BATCH_SIZE=8
MAX_LENGTH=512

# Hugging Face API Token (required for some models)
HUGGINGFACE_TOKEN=your_token_here

SENTIMENT_MODEL=cardiffnlp/twitter-xlm-roberta-base-sentiment
ZERO_SHOT_MODEL=joeddav/xlm-roberta-large-xnli
NER_MODEL=xlm-roberta-large-finetuned-conll03-english

# News Collection
FEEDS_FILE=app/feeds.yaml
COLLECT_INTERVAL_MIN=15
GDELT_ENABLED=false

# API Configuration
API_PREFIX=/api
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=["*"]
